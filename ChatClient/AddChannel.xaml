<Window x:Class="ChatClient.AddChannel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="AddChannel" Height="100" Width="300" Background="#FF202225">
    <Grid>
        <TextBox Name="channelName" VerticalAlignment="Center" HorizontalAlignment="Left" Height="100" Width="100" Background="Indigo"></TextBox>
        <Button Name="addChannelName" Width="90" Height="100" VerticalAlignment="Center" HorizontalAlignment="Right" Click="addChannelName_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
